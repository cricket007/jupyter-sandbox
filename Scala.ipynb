    "editable": true
   },
   "outputs": [],
   "source": [
    "def add(n:Int, m:Int):Int = m match {\n",
    "    case 0 => n\n",
    "    case _ if m > 0 => add(inc(n), dec(m))\n",
    "    case _ => add(dec(n), inc(m))\n",
    "}"
   ]
